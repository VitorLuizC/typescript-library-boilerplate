{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Output settings.
    "newLine": "lf",
    "outDir": "./dist",
    "sourceMap": true,
    "target": "es2015", // It's a JavaScript from almost 10 years ago. If your
                        // consumer can't support it, it's theirs problem not
                        // yours.

    // Type declaration settings.
    "declaration": true,
    "declarationDir": "./types",
    "declarationMap": true,
    "isolatedDeclarations": true,

    // Type-checking settings.
    "skipLibCheck": false,
    "types": []
  },
  "exclude": ["./src/**/*.test.ts"]
}
